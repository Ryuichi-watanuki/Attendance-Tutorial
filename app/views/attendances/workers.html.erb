<% provide(:title, "Worker" ) %>

<div class="row">
  <div class="col-xs-12 col-md-10 col-md-offset-1">
    <h1>出勤中社員一覧</h1>
    
    <% if @workers.count != 0 %>
      <h3>現在出勤中のスタッフ：<%= @workers.count.to_s %>名</h3>
      <table class = "table table-hover table-responsive">
        <thead>
          <tr>
            <th><%= User.human_attribute_name :name %></th>
            <th><%= User.human_attribute_name :department %></th>
            <th><%= Attendance.human_attribute_name :started_at %></th>
            <th><%= Attendance.human_attribute_name :note %></th>
        　</tr>
        </thead>  
        <tbody>
        　<% @workers.each do |worker| %>
          　<tr>
              <td><%= link_to worker.name, worker %></td>
              <td><%= worker.department_status %></td>
              <td><%= worker.attendances.working.work_start %></td>
              <td><%= worker.attendances.working.note %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <h1>現在、出社中の社員はいません</h1>
    <% end %>
  </div>
</div>
